DROP TABLE IF EXISTS bls_question_que;
CREATE TABLE bls_question_que(
    id INT(11) NOT NULL AUTO_INCREMENT  COMMENT '主键' ,
    que_id VARCHAR(255) NOT NULL   COMMENT '问题ID' ,
    que_state INT NOT NULL   COMMENT '状态' ,
    birthday DATETIME    COMMENT '生日' ,
    gender VARCHAR(255)    COMMENT '性别' ,
    height VARCHAR(255)    COMMENT '身高' ,
    weight VARCHAR(255)    COMMENT '体重' ,
    waist VARCHAR(255)    COMMENT '腰围' ,
    other_text VARCHAR(2555)    COMMENT '其他数据' ,
    label VARCHAR(255)    COMMENT '分类标签' ,
    created_time DATETIME NOT NULL   COMMENT '创建时间' ,
    updated_time DATETIME NOT NULL   COMMENT '最后更新时间' ,
    PRIMARY KEY (id)
)  COMMENT = '问题详细内容';

DROP TABLE IF EXISTS bls_question_history;
CREATE TABLE bls_question_history(
    id INT NOT NULL AUTO_INCREMENT  COMMENT '主键' ,
    user_id INT NOT NULL   COMMENT '用户ID' ,
    question_url VARCHAR(255) NOT NULL   COMMENT '生成活动路径' ,
    question_state INT NOT NULL  DEFAULT 1 COMMENT '生成路径状态' ,
    order_id VARCHAR(255) NOT NULL   COMMENT '第三方平台订单号' ,
    order_type INT NOT NULL   COMMENT '第三方平台订单类型;订单类型 1、2、3等，代表不同的发货内容' ,
    order_province VARCHAR(255)    COMMENT '省' ,
    order_city VARCHAR(255)    COMMENT '市' ,
    order_county VARCHAR(255)    COMMENT '县/区' ,
    order_address VARCHAR(255) NOT NULL   COMMENT '第三方平台配送地址' ,
    order_recipient VARCHAR(255) NOT NULL   COMMENT '收件人姓名' ,
    order_phone VARCHAR(255) NOT NULL   COMMENT '收件人手机号' ,
    order_remark VARCHAR(2000)    COMMENT '收件人订单备注' ,
    question_id VARCHAR(255) NOT NULL   COMMENT '关联问题ID' ,
    created_time DATETIME NOT NULL   COMMENT '问题创建时间' ,
    updated_time DATETIME NOT NULL   COMMENT '问题更新时间' ,
    remark VARCHAR(2000)    COMMENT '问题备注' ,
    other_name VARCHAR(255)    COMMENT '第三方平台名称' ,
    PRIMARY KEY (id)
)  COMMENT = '百乐思问题历史记录';

DROP TABLE IF EXISTS bls_question_user;
CREATE TABLE bls_question_user(
    id INT NOT NULL AUTO_INCREMENT  COMMENT '用户ID' ,
    user_name VARCHAR(255)    COMMENT '用户登陆名' ,
    pass_word VARCHAR(255)    COMMENT '密码' ,
    phone VARCHAR(255)    COMMENT '手机号;可以有也可以没有' ,
    created_time DATETIME NOT NULL   COMMENT '创建时间' ,
    updated_time DATETIME NOT NULL   COMMENT '更新时间' ,
    login_time DATETIME    COMMENT '登陆时间' ,
    out_time DATETIME    COMMENT '登出时间' ,
    remark VARCHAR(2000)    COMMENT '描述' ,
    PRIMARY KEY (id)
)  COMMENT = '百乐思问题系统用户管理系统';